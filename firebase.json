{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "game-styles.css.map",
      "game-styles.scss",
      "game-styles.map",
      "levels.css.map",
      "levels.scss",
      "home.css.map",
      "home.scss",
      "**/javascript/**",
      "**/components/**"
